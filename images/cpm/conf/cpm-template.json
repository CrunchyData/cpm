{
  "id": "cpm",
  "kind": "Template",
  "apiVersion": "v1beta1",
  "name": "cpm-example",
  "description": "Example shows how to deploy the crunchy-cpm image",
  "items": [
    {
      "id": "cpm-pod",
      "kind": "Pod",
      "apiVersion": "v1beta1",
      "desiredState": {
        "manifest": {
          "version": "v1beta1",
          "id": "cpm-pod",
          "volumes": [
          	{
               	"name": "www",
               	"source":
               		{
                       	"hostDir":
                       		{
                               	"path": "/home/jeffmc/docker-pg-cluster/images/crunchy-cpm/www/v2"
                               	}
			}

		}
          ],
          "containers": [{
            "name": "master",
            "image": "registry:5000/crunchy-cpm",
        	"volumeMounts": [
                                    {
                                        "name": "www",
                                        "mountPath": "/www",
                                        "readOnly": false
                                    }
                ],

            "env": [
              {
                "name": "CPM_ADMIN_URL",
                "value": "http://cluster-admin.crunchy.lab:8080"
              }
            ],
            "ports": [{
              "containerPort": 10000
            }]
          }]
        }
      },
      "labels": {
        "name": "cpm"
      }
    }
  ]
}
