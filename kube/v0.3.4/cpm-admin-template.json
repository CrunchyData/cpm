{
  "id": "cpm-admin",
  "kind": "Template",
  "apiVersion": "v1beta1",
  "name": "cpm-admin example",
  "description": "Example shows how to deploy the cpm-admin image",
  "parameters": [
    {
      "name": "ADMIN_USERNAME",
      "description": "administrator username",
      "generate": "expression",
      "from": "admin[A-Z0-9]{3}"
    },
    {
      "name": "ADMIN_PASSWORD",
      "description": "administrator password",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    }
  ],
  "items": [
    {
      "id": "cpm-admin",
      "kind": "Pod",
      "apiVersion": "v1beta1",
      "desiredState": {
        "manifest": {
          "version": "v1beta1",
          "id": "cpm-admin",
          "volumes": [
 		{
               	"name":"cpmlogs",
               	"source":
			{ "hostDir":{ "path":"/opt/cpm/logs" }
               	}
                },
               	{
               	"name":"cpmkeys",
               	"source":
			{ "hostDir":{ "path":"/opt/cpm/keys" }
               	}
               	},
          	{
               	"name": "pgdata",
               	"source":
               		{ "hostDir": { "path": "/opt/cpm/data/pgsql/cpm-admin" } }

		}
          ],
          "containers": [{
            "name": "cpm-admin",
            "image": "crunchydata/cpm-admin",
        	"volumeMounts": [
                                { "name": "pgdata",
                                        "mountPath": "/pgdata",
                                        "readOnly": false
                                },
				{
                                    "mountPath":"/cpmlogs",
                                    "name":"cpmlogs",
                                    "readOnly":false
                                },
                                {
                                    "mountPath":"/cpmkeys",
                                    "name":"cpmkeys",
                                    "readOnly":false
                                }
                 ],

            "env": [
 		{ "name": "DOMAIN", "value": "example.com" },
               	{ "name": "DB_PORT", "value": "5432" },
               	{ "name": "DB_USER", "value": "postgres" },
               	{ "name": "DB_HOST", "value": "127.0.0.1" }
            ],
            "ports": [{
              "containerPort": 13000
            }]
          }]
        }
      },
      "labels": {
        "name": "cpm-admin"
      }
    }
  ]
}
