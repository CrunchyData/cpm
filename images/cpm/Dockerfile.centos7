FROM docker.io/centos:centos7
MAINTAINER crunchy

RUN rpm -Uvh http://nginx.org/packages/centos/7/noarch/RPMS/nginx-release-centos-7-0.el7.ngx.noarch.rpm
RUN yum install -y procps-ng nginx which hostname && yum clean all -y


VOLUME ["/www"]
RUN chown -R daemon:daemon /www

VOLUME ["/cpmlogs"]
RUN chown -R daemon:daemon /cpmlogs

VOLUME ["/cpmkeys"]
RUN chown -R daemon:daemon /cpmkeys

EXPOSE 13000

# set up cluster directory
#
RUN mkdir -p /opt/cpm/bin
RUN mkdir -p /opt/cpm/conf
ADD bin /opt/cpm/bin
ADD conf /opt/cpm/conf
RUN chown -R daemon:daemon /opt/cpm

USER daemon

CMD ["/opt/cpm/bin/startnginx.sh"]


