{
  "id": "cpm-mon",
  "kind": "Template",
  "apiVersion": "v1beta1",
  "name": "cpm-mon example",
  "description": "Example shows how to deploy the cpm-mon image",
  "parameters": [
    {
      "name": "ADMIN_USERNAME",
      "description": "administrator username",
      "generate": "expression",
      "from": "admin[A-Z0-9]{3}"
    },
    {
      "name": "ADMIN_PASSWORD",
      "description": "administrator password",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{8}"
    }
  ],
  "items": [
    {
      "id": "cpm-mon",
      "kind": "Service",
      "apiVersion": "v1beta1",
      "port": 13000,
      "selector": {
        "name": "cpm-mon"
      }
    },
    {
      "id": "cpm-mon-api",
      "kind": "Service",
      "apiVersion": "v1beta1",
      "port": 8086,
      "selector": {
        "name": "cpm-mon-api"
      }
    },
    {
      "id": "cpm-mon-ui",
      "kind": "Service",
      "apiVersion": "v1beta1",
      "port": 8083,
      "selector": {
        "name": "cpm-mon-ui"
      }
    },
    {
      "id": "cpm-mon",
      "kind": "Pod",
      "apiVersion": "v1beta1",
      "desiredState": {
        "manifest": {
          "version": "v1beta1",
          "id": "cpm-mon",
          "volumes": [
 		{
               	"name":"cpmlogs",
               	"source":
			{ "hostDir":{ "path":"/opt/cpm/logs" }
               	}
                },
 		{
               	"name":"monitordata",
               	"source":
			{ "hostDir":{ "path":"/opt/cpm/data/influxdb" }
               	}
                }
          ],
          "containers": [{
            "name": "cpm-mon",
            "image": "crunchydata/cpm-mon",
        	"volumeMounts": [
				{
                                    "mountPath":"/cpmlogs",
                                    "name":"cpmlogs",
                                    "readOnly":false
                                },
				{
                                    "mountPath":"/monitordata",
                                    "name":"monitordata",
                                    "readOnly":false
                                }
                 ],

            "env": [
 		{ "name": "DOMAIN", "value": "default.local" },
               	{ "name": "DB_PORT", "value": "5432" },
               	{ "name": "DB_USER", "value": "postgres" },
               	{ "name": "DB_HOST", "value": "cpm-admin-db.default.local" }
            ],
            "ports": [{
              "containerPort": 13000
            }]
          }]
        }
      },
      "labels": {
        "name": "cpm-mon"
      }
    }
  ]
}
